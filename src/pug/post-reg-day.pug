doctype html
html(lang='en')

    include includes/posts-data.pug

    include includes/images.pug

    - var post = null
    each tmpPost in posts
        if tmpPost.link == 'post-reg-day'
            - post = tmpPost

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

        title #{post.title}

        link(rel='icon', type='image/x-icon', href='assets/logo.png')

        include includes/css.pug

    body

        include includes/navbar.pug


        header.masthead(style="background-image: url('assets/posts/"+post.imgDir+"/"+post.banner+"')")
            .container.position-relative.px-4.px-lg-5
                .row.gx-4.gx-lg-5.justify-content-center
                    .col-md-10.col-lg-8.col-xl-7
                        .post-heading
                            h1 #{post.title}
                            if post.subtitle
                                h2.subheading #{post.subtitle}
                            span.meta
                                | Posted by
                                a(href='#!') Art Club
                                | on #{post.date}

        // Post Content
        article.mb-4
            .container.px-4.px-lg-5
                .row.gx-4.gx-lg-5.justify-content-center
                    .col-md-10.col-lg-8.col-xl-7
                        if post.content
                            each paragraph in post.content
                                p
                                    | #{paragraph}
                        
                        each item in files
                            if item.name == "posts"
                                each imgDir in item.children
                                    if imgDir.name == post.imgDir
                                        each file in imgDir.children
                                            if file.name != post.banner
                                                a(href='assets/posts/'+post.imgDir+'/'+file.name)
                                                    img.img-fluid(src='assets/posts/'+post.imgDir+'/'+file.name)
                                                    span.caption.text-muted
                                                br
                        
                        p
                            | Post written on #{post.date}

        include includes/footer.pug

        include includes/scripts.pug
